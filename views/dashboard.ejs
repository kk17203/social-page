<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %>></title>
    </head>
    <body>
        <h1><%=user.name%> Dashboard</h1>
        <a href="/logout">LOG OUT</a>

        <h1>Posts</h1>
        <% if(posts) { %> <% posts.forEach(function(post) { %>
        <div>
            <h3>Post Author: <%= post.author.username %></h3>
            <p><em>(<%=post.timestamp%>)</em></p>
            <p><%= post.post %></p>
            <br />
            <h3>Comments</h3>
            <% if(comments) { %> <% comments.forEach(function(comment) { %> <%
            if(comment.post._id.toString() === post._id.toString()) { %>
            <p>Comment Author: <em>(<%= comment.author.name %>)</em></p>
            <p><%= comment.content %></p>
            <% } %> <% })} %>
            <form action="/dashboard/comments" method="POST">
                <label for="content">New Comment</label>
                <textarea
                    name="content"
                    id="comment-content"
                    cols="30"
                    rows="10"
                ></textarea>
                <input type="hidden" name="postId" value="<%= post._id %>" />
                <button type="submit">Submit Comment</button>
            </form>
        </div>
        <% }) %> <% } %>

        <h1>New Post</h1>
        <form action="" method="POST">
            <label for="post">Post</label>
            <textarea
                name="post"
                id="post"
                cols="30"
                rows="10"
                required
            ></textarea>
            <button type="submit">Submit Post</button>
        </form>
    </body>
</html>
